<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
     >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/tvLessonNumber"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lesson"
        android:id="@+id/tvTitle"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvLessonNumber"
        android:layout_toEndOf="@+id/tvLessonNumber"
        android:layout_toLeftOf="@+id/ivReadStatus"
        android:layout_toStartOf="@+id/ivReadStatus"
        android:maxLines="2"
        android:ellipsize="end" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbFavorite"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:checked="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivReadStatus"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/cbFavorite"
        android:layout_toStartOf="@+id/cbFavorite"
        android:src="@android:drawable/ic_menu_edit" />
</RelativeLayout>